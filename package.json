{
    "name": "grxy",
    "version": "0.0.0",
    "description": "A monorepo for experimentation",
    "main": "index.js",
    "repository": "git@github.com:grxy/grxy.git",
    "author": "Grex",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "projects/*"
        ]
    },
    "devDependencies": {
        "@babel/core": "7.1.2",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "23.6.0",
        "danger": "6.1.12",
        "eslint": "5.11.0",
        "gatsby-cli": "2.4.7",
        "husky": "1.3.0",
        "jest": "23.6.0",
        "jest-junit": "5.2.0",
        "lerna": "3.8.0",
        "lint-staged": "8.0.4",
        "now": "12.1.14",
        "npm-run-all": "4.1.5",
        "prettier": "1.14.3",
        "prettier-eslint": "8.8.2",
        "prettier-eslint-cli": "4.7.1"
    },
    "eslintConfig": {
        "extends": "@grxy"
    },
    "eslintIgnore": [
        "coverage",
        "dist",
        "node_modules",
        "private"
    ],
    "husky": {
        "skipCI": false,
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "clearMocks": true,
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "lcov",
            "text-summary"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
        },
        "resetModules": true,
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/(?!@grxy)"
        ]
    },
    "lint-staged": {
        "*.{graphql,json,md,yml}": [
            "prettier-eslint --list-different --write",
            "git add -f"
        ],
        "*.{js,mjs}": [
            "eslint --fix --quiet",
            "git add -f"
        ],
        "*.js": [
            "yarn test --bail --collectCoverage=false --passWithNoTests --findRelatedTests"
        ]
    },
    "renovate": {
        "automerge": true,
        "extends": [
            "config:base"
        ]
    },
    "scripts": {
        "build": "yarn compose:prod build",
        "clean": "run-p clean:packages clean:projects clean:root",
        "clean:packages": "rm -rf packages/*/node_modules",
        "clean:projects": "rm -rf projects/*/node_modules",
        "clean:root": "rm -rf node_modules",
        "compose:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml",
        "dev": "docker-compose up --build",
        "dev:graphql": "lerna --scope @grxy/apollo-server --scope @grxy/next run dev --parallel",
        "down": "docker-compose down",
        "eslint": "eslint '**/*.{js,mjs}'",
        "lint": "run-p prettier eslint",
        "lint:fix": "run-p 'prettier --write' 'eslint --fix'",
        "prettier": "prettier-eslint '**/*.{graphql,json,md,yml}' --list-different",
        "release": "lerna publish --conventional-commits --yes",
        "start": "yarn compose:prod up --build",
        "test": "jest"
    }
}
