{
    "name": "grxy",
    "version": "0.0.0",
    "description": "A monorepo for experimentation",
    "main": "index.js",
    "repository": "git@github.com:grxy/grxy.git",
    "author": "Grex",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "projects/*"
        ]
    },
    "devDependencies": {
        "@babel/core": "7.1.2",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "23.6.0",
        "danger": "6.0.2",
        "eslint": "5.8.0",
        "husky": "1.1.3",
        "jest": "23.6.0",
        "lerna": "3.4.3",
        "lint-staged": "8.0.4",
        "npm-run-all": "4.1.3",
        "prettier": "1.14.3",
        "prettier-eslint": "8.8.2",
        "prettier-eslint-cli": "4.7.1"
    },
    "eslintConfig": {
        "extends": "@grxy"
    },
    "eslintIgnore": [
        "coverage",
        "dist",
        "node_modules",
        "private"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "clearMocks": true,
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "lcov",
            "text-summary"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "resetModules": true,
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/(?!@grxy)"
        ]
    },
    "lint-staged": {
        "*.{graphql,json,md,yml}": [
            "prettier-eslint --list-different --write",
            "git add -f"
        ],
        "*.{js,mjs}": [
            "eslint --fix --quiet",
            "git add -f"
        ],
        "*.js": [
            "yarn test --bail --collectCoverage=false --passWithNoTests --findRelatedTests"
        ]
    },
    "renovate": {
        "extends": [
            "config:base"
        ]
    },
    "scripts": {
        "build": "test",
        "eslint": "eslint '**/*.{js,mjs}'",
        "lint": "run-p prettier eslint",
        "lint:fix": "run-p 'prettier --write' 'eslint --fix'",
        "prettier": "prettier-eslint '**/*.{graphql,json,md,yml}' --list-different",
        "test": "jest"
    }
}
