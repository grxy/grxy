{
    "name": "grxy",
    "version": "0.0.0",
    "description": "A monorepo for experimentation",
    "main": "index.js",
    "repository": "git@github.com:grxy/grxy.git",
    "author": "Grex",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "projects/*"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^23.6.0",
        "danger": "^6.0.2",
        "eslint": "^5.8.0",
        "husky": "^1.1.3",
        "jest": "^23.6.0",
        "lerna": "^3.4.3",
        "lint-staged": "^8.0.4",
        "prettier": "^1.14.3",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{graphql,json,md,yml}": [
            "prettier-eslint --list-different --write",
            "git add -f"
        ],
        "*.{js,mjs}": [
            "eslint --fix --quiet",
            "git add -f"
        ],
        "*.js": [
            "yarn test --bail --collectCoverage=false --passWithNoTests --findRelatedTests"
        ]
    },
    "scripts": {
        "test": "jest"
    }
}
