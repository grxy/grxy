{
    "name": "grxy",
    "version": "0.0.0",
    "description": "A monorepo for experimentation",
    "main": "index.js",
    "repository": "git@github.com:grxy/grxy.git",
    "author": "Grex",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "projects/*"
        ]
    },
    "devDependencies": {
        "@babel/core": "7.4.4",
        "@storybook/addon-knobs": "5.0.11",
        "@storybook/react": "5.0.11",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "24.7.1",
        "cypress": "3.1.5",
        "danger": "7.1.3",
        "enzyme": "3.9.0",
        "enzyme-adapter-react-16": "1.12.1",
        "enzyme-to-json": "3.3.5",
        "eslint": "5.16.0",
        "gatsby-cli": "2.5.12",
        "husky": "2.2.0",
        "jest": "24.7.1",
        "jest-emotion": "10.0.10",
        "jest-junit": "6.3.0",
        "lerna": "3.13.4",
        "lint-staged": "8.1.5",
        "now": "15.0.11",
        "npm-run-all": "4.1.5",
        "prettier": "1.17.0",
        "prettier-eslint": "8.8.2",
        "prettier-eslint-cli": "4.7.1",
        "react": "16.8.6",
        "react-dom": "16.8.6"
    },
    "eslintConfig": {
        "extends": "@grxy"
    },
    "eslintIgnore": [
        "coverage",
        "dist",
        "node_modules",
        "private"
    ],
    "husky": {
        "skipCI": false,
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "clearMocks": true,
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "lcov",
            "text-summary"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
        },
        "resetModules": true,
        "setupFilesAfterEnv": [
            "<rootDir>/scripts/jest/setupTestFrameworkScriptFile.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer",
            "jest-emotion"
        ],
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "testRegex": "\\.test\\.js$",
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/(?!@grxy)"
        ]
    },
    "lint-staged": {
        "*.{graphql,json,md,yml}": [
            "prettier-eslint --list-different --write",
            "git add -f"
        ],
        "*.{js,mjs}": [
            "eslint --fix --quiet",
            "git add -f"
        ],
        "*.js": [
            "yarn test --bail --collectCoverage=false --passWithNoTests --findRelatedTests"
        ]
    },
    "renovate": {
        "automerge": true,
        "extends": [
            "config:base"
        ]
    },
    "scripts": {
        "build": "yarn compose:prod build",
        "clean": "run-p clean:packages clean:projects clean:root",
        "clean:packages": "rm -rf packages/*/node_modules",
        "clean:projects": "rm -rf projects/*/node_modules",
        "clean:root": "rm -rf node_modules",
        "compose:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml",
        "coverage": "open coverage/lcov-report/index.html",
        "dev": "docker-compose up --build",
        "dev:cra": "lerna --scope @grxy/create-react-app run dev --parallel",
        "dev:graphql": "lerna --scope @grxy/apollo-server --scope @grxy/next run dev --parallel",
        "dev:next": "lerna --scope @grxy/next run dev --parallel",
        "down": "docker-compose down",
        "eslint": "eslint '**/*.{js,mjs}'",
        "lint": "run-p prettier eslint",
        "lint:fix": "run-p 'prettier --write' 'eslint --fix'",
        "prettier": "prettier-eslint '**/*.{graphql,json,md,yml}' --list-different",
        "release": "lerna publish --conventional-commits --yes",
        "start": "yarn compose:prod up --build",
        "storybook": "start-storybook -p 9001 -c .storybook",
        "test": "jest",
        "test:integration": "CYPRESS_baseUrl=http://localhost:3000 yarn cypress run"
    }
}
