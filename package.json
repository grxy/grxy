{
    "name": "grxy",
    "version": "0.0.0",
    "description": "A monorepo for experimentation",
    "main": "index.js",
    "repository": "git@github.com:grxy/grxy.git",
    "author": "Grex",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "projects/*"
        ]
    },
    "devDependencies": {
        "babel-jest": "24.8.0",
        "core-js": "3.1.4",
        "cypress": "3.3.2",
        "danger": "9.0.3",
        "enzyme": "3.10.0",
        "enzyme-adapter-react-16": "1.14.0",
        "enzyme-to-json": "3.3.5",
        "eslint": "6.8.0",
        "gatsby-cli": "2.7.8",
        "husky": "3.0.0",
        "jest": "24.8.0",
        "jest-emotion": "10.0.14",
        "jest-junit": "6.4.0",
        "lerna": "3.15.0",
        "lint-staged": "9.1.0",
        "now": "15.7.0",
        "npm-run-all": "4.1.5",
        "react": "16.8.6",
        "react-dom": "16.8.6"
    },
    "eslintConfig": {
        "extends": "@grxy"
    },
    "eslintIgnore": [
        "coverage",
        "dist",
        "node_modules",
        "private"
    ],
    "husky": {
        "skipCI": false,
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "renovate": {
        "extends": [
            "config:base"
        ],
        "labels": [
            "dependencies"
        ],
        "packageRules": [
            {
                "packagePatterns": [
                    "*"
                ],
                "minor": {
                    "automerge": true,
                    "groupName": "all non-major dependencies",
                    "groupSlug": "all-minor-patch"
                }
            }
        ]
    },
    "scripts": {
        "build": "yarn compose:prod build",
        "clean": "run-p clean:packages clean:projects clean:root",
        "clean:packages": "rm -rf packages/*/node_modules",
        "clean:projects": "rm -rf projects/*/node_modules",
        "clean:root": "rm -rf node_modules",
        "compose:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml",
        "coverage": "open coverage/lcov-report/index.html",
        "dev": "docker-compose up --build",
        "dev:cra": "lerna --scope @grxy/create-react-app run dev --parallel",
        "dev:graphql": "lerna --scope @grxy/apollo-server --scope @grxy/next run dev --parallel",
        "dev:next": "lerna --scope @grxy/next run dev --parallel",
        "down": "docker-compose down",
        "eslint": "eslint '**/*.{js,mjs}'",
        "lint": "run-p prettier eslint",
        "lint:fix": "run-p 'prettier --write' 'eslint --fix'",
        "prettier": "prettier '**/*.{graphql,json,md,yml}' --list-different",
        "release": "lerna publish --conventional-commits --github-release --yes",
        "start": "yarn compose:prod up --build",
        "storybook": "start-storybook -p 9001 -c ./packages/storybook",
        "test": "jest",
        "test:integration": "CYPRESS_baseUrl=http://localhost:3000 yarn cypress run"
    }
}
